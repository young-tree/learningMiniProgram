<!-- 1.水平滚动：scroll-x -->
<!-- view:块级元素 -->
<scroll-view class="container1" scroll-x>
  <view wx:for="{{10}}" wx:key="item" class="item1">{{item}}</view>
</scroll-view>
<!-- 2.垂直滚动：scroll-y -->
<scroll-view class="container2" 
             scroll-y>
  <view wx:for="{{10}}" wx:key="item" class="item2">{{item}}</view>
</scroll-view>
<!-- 3.其他补充 -->
<scroll-view class="container2" 
             scroll-y
             bindscroll="bindScroll">
  <view wx:for="{{10}}" wx:key="item" class="item2">{{item}}</view>
</scroll-view>