<!-- 1.view的基本使用 -->
<view class="box">哈哈哈</view>
<view>呵呵呵</view>
<!-- 2.hover-class:当用户按下组件是,显示的样式 -->
<!-- 3.hover-start-time:按住后多久出现点击态，单位毫秒  -->
<!-- 4.hover-stay-time:手指松开后点击态保留时间，单位毫秒 -->
<view class="box1" hover-class="hover-view" hover-start-time = "1000" hover-stay-time="{{1000}}">来啊</view>
<!-- 5.hover-stop-propagation：阻止祖先组件的点击态 -->
<view class="box2" hover-class="hover-view2">
  <view class="box3" hover-class="hover-view1" hover-start-time = "{{1000}}" hover-stay-time="{{1000}}" hover-stop-propagation>来啊</view>
</view>
